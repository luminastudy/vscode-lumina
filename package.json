{
  "name": "vscode-lumina",
  "displayName": "Lumina Blocks Preview",
  "description": "VSCode extension for previewing JSON files with @lumina-study/blocks-graph visualization",
  "version": "0.0.0",
  "publisher": "lumina-study",
  "engines": {
    "vscode": "^1.106.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "json",
    "preview",
    "blocks",
    "graph",
    "visualization",
    "lumina"
  ],
  "activationEvents": [
    "onCustomEditor:lumina.blocksPreview"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "lumina.blocksPreview",
        "displayName": "Lumina Blocks Preview",
        "selector": [
          {
            "filenamePattern": "*.json"
          }
        ],
        "priority": "option"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p ./",
    "dev": "tsc -watch -p ./",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "spell": "cspell lint '**/*.{ts,js,md,json}' --gitignore",
    "spell:check": "cspell lint '**/*.{ts,js,md,json}' --gitignore",
    "prepare": "husky",
    "vscode:prepublish": "pnpm build",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luminastudy/vscode-lumina"
  },
  "bugs": {
    "url": "https://github.com/luminastudy/vscode-lumina/issues"
  },
  "author": "Lumina Study",
  "license": "MIT",
  "type": "commonjs",
  "packageManager": "pnpm@10.18.2",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.1",
    "@vitest/coverage-v8": "^4.0.12",
    "@vscode/vsce": "^3.7.0",
    "cspell": "^9.3.2",
    "eslint": "^9.39.1",
    "eslint-config-agent": "^1.8.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  },
  "dependencies": {
    "@lumina-study/blocks-graph": "^0.1.2"
  }
}
